#defkanji utf-8
#defencoding utf-8

# prefix key [Ctrl]-z
escape ^z^z

# General
#startup_message off
#vbell           off
#msgminwait      0
#autodetach      on
#defscrollback   1000
#
## http://d.hatena.ne.jp/naoya/20051223/1135351050
## List window
hardstatus on
hardstatus alwayslastline "%{.Wb}.: %-w%{.RW}%n %t%{-}%+w :. %=[%Y-%m-%d %02c]"
#
## http://www.negeta.com/~maya/tdiary/?date=20080229#p02
## 256 colors
#defbce             on
#term               xterm-256color
#termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'
#termcapinfo kterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'
#
## http://paranoid.dip.jp/kaworu/2008-03-06-1.html
## Resize Window
#termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
#termcapinfo kterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
#
## Binding Keys
#bind w windowlist -b

defutf8 on
defencoding utf8
encoding utf-8 utf-8


bindkey "^[[C" next
bindkey "^[[D" prev

#bind n next
#bind p prev
bind s screen
bind q quit
bind l windowlist
bind ^U encoding utf8
bind ^E encoding euc
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^]  command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

escape ^z^z

#bind x
#bind ^x

startup_message off
autodetach on
vbell off

caption always "%-w%10L>%{=b bw}%n %t%{-}%+w%-0="
hardstatus alwayslastline "%H%=%Y/%m/%d %02c"
shelltitle "$ |shell"

#bindkey -k kD stuff \177

termcapinfo xterm* ti@:te@

#vim colors
defbce on
term xterm-256color
shell $SHELL
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

